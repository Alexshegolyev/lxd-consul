#!/sbin/openrc-run


stop() {
    ebegin "Stopping consul server"
    if ps | grep $(cat /run/consul.pid) > /dev/null 2>&1
      then
        pkill consul
    fi
    eend $?
}

start() {
  ebegin "Starting consul server"
  nohup /usr/bin/consul agent -config-dir /consul/server > /var/log/consul.log 2>&1 & \
  echo $! > /run/consul.pid
  eend $?
}
